{
  "manifest_version": 2,

  "name": "User Agent Spoofer",
  "description": "Lets you specify User-Agent header",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": ""
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "<all_urls>"
  ]
}
